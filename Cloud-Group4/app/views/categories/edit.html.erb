
<%= form_for @category do |f| %>

	<% if @category.errors.any? %>
	<div class='error' style="color:red">
		<ul>
			<% for msg in @category.errors.full_messages %> 
			<li><%= msg %> </li>
			<%end%>
		</ul>
	</div>
	<% end %>
	
	<label>Name: </label><br/>
	<%= f.text_field :name%><br/>
	
	<%= f.submit %> 
	
<% end %>
