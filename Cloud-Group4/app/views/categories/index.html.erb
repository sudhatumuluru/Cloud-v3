<h3> Listing Categories </h3>

<h3>Categories : <span id="count" > <%= @categories.size %> </span> </h3>
<ul id="lists">
	<% for category in @categories %>
		<li id="li_<%=category.id%>"><%=  category.name %> 
		<%= link_to "edit", edit_category_path(category), remote: true %>
		<%= link_to "x", category_path(category), method: :delete, data:{confirm: "Are you sure?"}, remote: true %></li>
	<% end %>
</ul>


