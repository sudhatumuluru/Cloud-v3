<head>
  <link rel="stylesheet" href="tasks.css">
</head>
<h3> Listing tasks <h3>

<table border="1">
	<thead>
		<tr>
			<th>Sl No</th>
			<th>Name</th>
			<th>Duedate</th>
			<th>ProjectName</th>
		</tr>
	</thead>
	<tbody>
		<% @tasks.each_with_index do |task,index| %>
		<tr>
			<td><%= index+1 %></td>
			<td><%= link_to task.name, task_path(task)%></td>
			<td><%= task.due_date %></td>
			<td><%= task.project_id %></td>
			
		</tr>
		<% end %>	
	</tbody>
</table>





 
